@model Product

<tr>
    <td>@Model.Id</td>
    <td>@Model.Name</td>
    <td>@Model.QuantityPerUnit</td>
    <td>@(((decimal)Model.UnitPrice).ToString("c"))</td>
    <td>@Model.UnitsInStock</td>
    <td>@Model.UnitsOnOrder</td>
    <td>@Model.ReorderLevel</td>
    <td>@Model.Discontinued</td>
    <td>
        <NavLink class="btn btn-warning btn-sm" href="">
            Edit
        </NavLink>

        <form method="post" asp-action="Remove" asp-controller="Products">
		    <input type="hidden" name="id" value="@Model.Id"/>
		    <button type="submit" class="btn btn-sm btn-danger">
			    Remove
		    </button>
	    </form>
    </td>
</tr>