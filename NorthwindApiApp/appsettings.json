{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft": "Warning",
            "Microsoft.Hosting.Lifetime": "Information"
        }
    },
    "NLog": {
        "targets": {
            "logfile": {
                "type": "File",
                "fileName": "${basedir}/logs/nlog/${date:cached=true}.log"
            }
        },
        "rules": [
            {
                "logger": "*",
                "minLevel": "Info",
                "writeTo": "logfile"
            }
        ]
    },
    "AllowedHosts": "*",
    "Mode": "Sql",
    "ConnectionStrings": {
        "SqlConnection": "Data Source=(LocalDB)\\MSSQLLocalDB;Initial Catalog=Northwind;Integrated Security=True"
    }
}
